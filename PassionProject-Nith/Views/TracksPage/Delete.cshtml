@model PassionProject_Nith.Models.Track

<h1>Delete Track</h1>

<h3>Are you sure you want to delete this track?</h3>
<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Model.TrackTitle
        </dd>
        <dt class="col-sm-2">
            Length
        </dt>
        <dd class="col-sm-10">
            @Model.TrackLength
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TrackId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
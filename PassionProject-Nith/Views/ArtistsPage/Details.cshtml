@model PassionProject_Nith.Models.Artist

<h1>@Model.ArtistName</h1>
@if (!string.IsNullOrEmpty(Model.ArtistBio))
{
    <p>@Model.ArtistBio</p>
}

<h2>Discography</h2>
@if (Model.Albums != null && Model.Albums.Any())
{
    <ul>
        @foreach (var album in Model.Albums)
        {
            <li>
                <a href="@Url.Action("Details", "AlbumsPage", new { id = album.AlbumId })">@album.AlbumTitle</a>
                - @album.ReleaseDate.ToShortDateString() (Genre: @album.Genre)
            </li>
        }
    </ul>
}
else
{
    <p>No albums found for this artist.</p>
}